extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raíces 
        h2.text-2xl.text-center.font-extrabold= pagina

        a(class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto" href="/mis-propiedades") Volver

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="space-y-8")
                div(class="space-y-5")
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                    p.text-gray-600 Añade información sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Título del anuncio
                        input#titulo.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej. Hermosa casa en la montaña" type="text" name="titulo")

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripción
                        textarea#descripcion.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400.h-66.resize-none(placeholder="Descripción de la propiedad" name="descripcion")
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Categoría
                            select#categoria.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") -- Seleccione --

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                            select#precio.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") -- Seleccione --

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") -- Seleccione --
                                - var n = 0;
                                    while n < 7
                                        option(value=n) #{n++}

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="estacionamientos") Estacionamientos
                            select#estacionamientos.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamientos")
                                option(value="") -- Seleccione --
                                - var n = 0;
                                    while n < 7
                                        option(value=n) #{n++}
                                
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="banos") Baños
                            select#banos.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(name="banos")
                                option(value="") -- Seleccione --
                                - var n = 0;
                                    while n < 7
                                        option(value=n) #{n++}
                    div(class="border-gray-200 border-t py-5 space-y-5")                    
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Ubica la propiedad en el mapa
                        #mapa(class="h-96")

                        div     
                            p.calle

                        input(type="hidden" name="calle" id="calle")
                        input(type="hidden" name="lat" id="lat")
                        input(type="hidden" name="lng" id="lng")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")