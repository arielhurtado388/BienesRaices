extends ../layout/admin

block styles 
    meta(name="csrf-token" content= csrfToken)

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Ra√≠ces 
        h2.text-2xl.text-center.font-extrabold= pagina

        a(class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto" href="/propiedades/crear") Publicar propiedad

        //- pre= JSON.stringify(propiedades, undefined, 2)

        if propiedades.length

            div(class="flex flex-wrap gap-3 mb-5")
                a(class="rounded py-2 bg-red-600 hover:bg-red-700 text-sm px-6 font-bold text-center text-white inline-flex items-center gap-2" href="/propiedades/reporte/pdf")
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z")
                    | Descargar PDF
                a(class="rounded py-2 bg-green-600 hover:bg-green-700 text-sm px-6 font-bold text-center text-white inline-flex items-center gap-2" href="/propiedades/reporte/excel")
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 0 1-1.125-1.125M3.375 19.5h7.5c.621 0 1.125-.504 1.125-1.125m-9.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-7.5A1.125 1.125 0 0 1 12 18.375m9.75-12.75c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125m19.5 0v1.5c0 .621-.504 1.125-1.125 1.125M2.25 5.625v1.5c0 .621.504 1.125 1.125 1.125m0 0h17.25m-17.25 0h7.5c.621 0 1.125.504 1.125 1.125M3.375 8.25c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m17.25-3.75h-7.5c-.621 0-1.125.504-1.125 1.125m8.625-1.125c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M12 10.875v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125M12 12h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125M20.625 12c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5M12 14.625v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 14.625c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m0 0v1.5c0 .621-.504 1.125-1.125 1.125m1.125-1.125c0 .621.504 1.125 1.125 1.125")
                    | Descargar Excel

            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades 
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(class="w-full block" src=`uploads/${propiedad.imagen}` alt=`Imagen de ${propiedad.titulo}`)

                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                                    a(class="block text-2xl font-extrabold text-indigo-600 truncate" href=`/propiedad/${propiedad.id}`)= propiedad.titulo
                                    p(class="text-sm text-black font-bold")= propiedad.categoria.nombre
                                    p(class="text-sm text-gray-500 font-bold flex items-center gap-2")
                                        svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6")
                                            path(d="M10.464 8.746c.227-.18.497-.311.786-.394v2.795a2.252 2.252 0 0 1-.786-.393c-.394-.313-.546-.681-.546-1.004 0-.323.152-.691.546-1.004ZM12.75 15.662v-2.824c.347.085.664.228.921.421.427.32.579.686.579.991 0 .305-.152.671-.579.991a2.534 2.534 0 0 1-.921.42Z")
                                            path(fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 6a.75.75 0 0 0-1.5 0v.816a3.836 3.836 0 0 0-1.72.756c-.712.566-1.112 1.35-1.112 2.178 0 .829.4 1.612 1.113 2.178.502.4 1.102.647 1.719.756v2.978a2.536 2.536 0 0 1-.921-.421l-.879-.66a.75.75 0 0 0-.9 1.2l.879.66c.533.4 1.169.645 1.821.75V18a.75.75 0 0 0 1.5 0v-.81a4.124 4.124 0 0 0 1.821-.749c.745-.559 1.179-1.344 1.179-2.191 0-.847-.434-1.632-1.179-2.191a4.122 4.122 0 0 0-1.821-.75V8.354c.29.082.559.213.786.393l.415.33a.75.75 0 0 0 .933-1.175l-.415-.33a3.836 3.836 0 0 0-1.719-.755V6Z" clip-rule="evenodd")
                                        | $#{Number(propiedad.precio).toLocaleString()} USD

                                    a(class="text-sm text-gray-600" href=`/mensajes/${propiedad.id}`)= `${propiedad.mensajes.length} mensajes`  

                                
                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/5 flex flex-col gap-2 2xl:flex-row")
                                    button(class=`${propiedad.publicada ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800"} cambiar-estado px-2 py-2 md:py-1 text-xs font-semibold leading-5 rounded cursor-pointer w-full` type="button" data-id-propiedad=`${propiedad.id}`)= `${propiedad.publicada ? "Publicada" : "No publicada"}` 
                                    
                                    a(class="px-2 py-2 md:py-1 text-xs font-semibold leading-5 rounded cursor-pointer bg-indigo-100 text-indigo-800 text-center" href=`/propiedades/editar/${propiedad.id}`)= "Editar"

                                    form(action=`/propiedades/eliminar/${propiedad.id}` method="POST")
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        input(class="px-2 py-2 md:py-1 text-xs font-semibold leading-5 rounded cursor-pointer bg-red-100 text-red-800 w-full" type="submit" value="Eliminar") 
                
                div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")
                    div(class="flex flex-1 justify-between sm:hidden")
                        a(class=`${paginaActual==="1" ? "pointer-events-none" : ""} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50` href=`/mis-propiedades?pagina=${paginaActual - 1}`) Anterior

                        a(class=`${paginaActual===paginas ? "pointer-events-none" : ""} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50` href=`/mis-propiedades?pagina=${paginaActual + 1}`) Siguiente

                    div(class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between") 
                        p(class="text-sm text-gray-700 gap-2") Mostrando 
                            span(class="font-medium") #{offset + 1} a 
                            span(class="font-medium") #{total < limit + offset ? total : limit + offset} de 
                            span(class="font-medium") #{total} resultados

                    div(class="hidden sm:block") 
                        nav(class="relative z-0 inline-flex rounded-md shadow-md") 
                            - var n = 1;
                                while n <= paginas 
                                    a(class=`${paginaActual==n ? "bg-indigo-50 border-indigo-500 text-indigo-600" : "bg-white border-gray-300 text-gray-500 hover:bg-gray-50"} relative inline-flex items-center px-4 py-2 border text-sm font-medium` href=`/mis-propiedades?pagina=${n}`) #{n++} 
        
        else 
            p(class="text-center") No hay propiedades

block scripts 
    script(src="/js/cambiarEstado.js") 