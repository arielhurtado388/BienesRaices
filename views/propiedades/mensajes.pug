extends ../layout/admin

block contenido
    h2(class="text-3xl font-extrabold text-center my-10")= pagina
    a(class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm px-10 font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto" href="/mis-propiedades") Volver

    //- pre= JSON.stringify(mensajes, undefined, 2)

    div(class="max-w-4xl mx-auto bg-white shadow")
        if mensajes.length 
            ul
                each mensaje in mensajes 
                    li(class="border-gray-200 border-b p-5 space-y-2")
                        p(class="font-bold text-gray-800") Nombre: 
                            span.font-normal= mensaje.usuario.nombre
                        p(class="font-bold text-gray-800") Correo: 
                            span.font-normal= mensaje.usuario.correo
                        p(class="font-bold text-gray-800") Mensaje: 
                            span.font-normal= mensaje.mensaje
                        p(class="font-bold text-gray-800") Enviado: 
                            span.font-normal= formatearFecha(mensaje.createdAt)
        else 
            p(class="text-center text-gray-600 p-5") No hay mensajes