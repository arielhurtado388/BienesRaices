extends ../layout/index

block contenido
    div.py-10
        a(href="/")
            img(class="h-29 rounded-full object-cover object-center flex mx-auto mb-6" src="/img/logo.webp", alt="Logo") 
            //- h1.text-4xl.my-10.font-extrabold.text-center Bienes
            //-     span.font-normal Raíces 
        h2.text-2xl.text-center.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Correo
                        input#correo.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu correo" type="email" name="correo")
                    
                    div(class="flex items-center justify-between")
                        a(class="text-gray-500 text-xs" href="/auth/registro") ¿No tienes una cuenta? Crea una 
                        a(class="text-gray-500 text-xs" href="/auth/login") ¿Ya tienes una cuenta? Inicia sesión 

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")