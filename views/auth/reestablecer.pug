extends ../layout/index

block contenido
    div.py-10
        a(href="/") 
            h1.text-4xl.my-10.font-extrabold.text-center Bienes
                span.font-normal Raíces 
        h2.text-2xl.text-center.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg


        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="contrasena") Nueva contraseña
                        input#contrasena.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nueva contraseña" type="password" name="contrasena")

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar contraseña")